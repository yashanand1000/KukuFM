<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="index.css">
<link rel="stylesheet" href="/stylesheets/stars.css">

<div id="carouselExampleIndicators" class="carousel slide no-padding" data-ride="carosel" >
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://m.media-amazon.com/images/S/sonata-images-prod/PV_IN_Shamshera_Launch/524fe23c-55b8-46b9-a764-67a1d6fc5fc2._UR3000,600_SX1500_FMwebp_.jpeg" alt="First slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="https://m.media-amazon.com/images/S/sonata-images-prod/PV_IN_TVOD_TopGunMaverick/2b8ef907-7906-4b01-b9a1-a658072d7b9a._UR3000,600_SX1500_FMwebp_.jpeg" alt="Second slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="https://m.media-amazon.com/images/S/sonata-images-prod/PV_IN_Samaritan_Launch/9b084b6f-a786-4ed4-bd03-4e67ced0dd2d._UR3000,600_SX1500_FMwebp_.jpeg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br>
  <!-- Recommended Shows -->
  <h1 class="title">Recommended Shows</h1>
<div class="movies-list">
  <button class="pre-btn"><img src="images/pre.png" alt=""></button>
  <button class="nxt-btn"><img src="images/nxt.png" alt=""></button>
  <div class="film-container">

    <% let imageCounter1 = 1; %>
    <% for (let audiobook of audiobooks) { %>
    <div class="film">
      <img src="images/poster <%= imageCounter1 %>.png" alt="" class="film-img">
      <div class="film-body">
        <h2 class="name"><%= audiobook.title %></h2>
        <h6 class="des"><%= audiobook.genre %></h6>
        <p class="des">
          <b>Price:</b> $<%= audiobook.price %>
        </p>
        <!-- <h6 class="des"><%= audiobook.description %></h6> -->
        <button class="watchlist-btn">
          <a href="/audiobooks/<%= audiobook._id %>" class="view">View</a>
        </button>
      </div>
    </div>
    <% imageCounter1 = (imageCounter1 % 10) + 1; %>
    <% } %>

  </div>
</div>

